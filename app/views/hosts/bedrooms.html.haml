.contents
  .left_content
    %h2 掲載するのはどんなお部屋ですか?
    .form_box
      = form_for @host, url: {action: 'bathrooms'} do |f|
        .bedroom
          = f.hidden_field :category
          = f.hidden_field :house_type
          = f.hidden_field :room_type
          = @host.category
          = @host.house_type
          = @host.room_type
          %p
            = f.label :capacity, "最大何人まで宿泊可能ですか?"
          %p
            = f.number_field :capacity
          %p
            = f.label :num_bedroom, "ベッドルームの数は？"
          %p
            = f.number_field :num_bedroom
          .btn.btn-success.btn-sm
            = f.submit "次へ", class: "next"
  .right_content
