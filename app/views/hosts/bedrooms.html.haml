.contents
  .left_content
    %h2 最大何人まで宿泊可能ですか?
    .form_box
      = form_for @host, url: {action: 'bathrooms'} do |f|
        .bedroom
          = f.hidden_field :category
          = f.hidden_field :house_type
          = f.hidden_field :room_type
          -# = @host.category
          -# = @host.house_type
          -# = @host.room_type
          %p
            = f.label :capacity, "定員"
          %p
            = f.text_field :capacity, class: "capacity_count", value: "1"
          %p
            = f.label :num_bedroom, "ベッド数"
          %p
            = f.text_field :num_bedroom, class: "bedroom_count", value: "1"
          .btn.btn-success.btn-sm
            = f.submit "次へ", class: "next"
  .right_content
