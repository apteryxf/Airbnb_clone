.contents
  .left_content
    %h2 掲載するのはどんなお部屋ですか?
    .form_box
      = form_for @host, url: {action: 'location'} do |f|
        %p
          = f.label :num_of_bath, "バスルーム数は？"
        %p
          = f.text_field :num_of_bath, class: "bathroom_count", value: "1"
        .btn.btn-success.btn-sm
          = f.submit "次へ", class: "next"
  .right_content
